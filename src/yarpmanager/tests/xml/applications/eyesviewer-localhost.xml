
<application>
	<!-- Generic information-->
	<name>EyesViewer-Localhost</name>
	<description> A fake robot eyes viewer with integrated applications running on localhost </description>
	<version>1.0</version>
	
	<authors>
		<author email="ali.paikan@iit.it"> Ali Paikan </author>
	</authors>
	
	<!-- ports prefix (will be added to all modules and applications)-->
	<!--<prefix>...</prefix> -->
	
	<!-- Required modules -->		
	<module>
		<name>yarpview</name>
		<node>localhost</node>
		<prefix>/RightView</prefix>
	</module>

	<module>
		<name>yarpview</name>
		<node>localhost</node>
		<prefix>/LeftView</prefix>
        <dependencies>
            <port timeout="10">/left/eye</port>
        </dependencies>
	</module>


	<!-- Required applications -->
	<application> 
		<name>FakeEyes</name>
		<prefix>/left</prefix>
	 </application>

	<application> 
		<name>FakeEyes</name>
		<prefix>/right</prefix>
	 </application>


	<!-- Required connections -->
	<connection persist="true">
		<from>/left/eye</from>
		<to>/LeftView/yarpview/img:i</to>
		<protocol>udp</protocol>
	</connection>

	<connection>
		<from>/right/eye</from>
		<to>/RightView/yarpview/img:i</to>
		<protocol>udp</protocol>
	</connection>

</application>

